@model LoginViewModel

<div style="background-image: url(https://fatadigital.com/wp-content/uploads/2010/06/fondo_pantalla.jpg})">
    <div class="text-center">
        <h1>Iniciar Sesión</h1>
    </div>
    <div class="content">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-8">
                    <form method="post">
                        <div asp-validation-summary="All"></div>

                        <div class="form-group">
                            <label asp-for="Correo"></label>
                            <input asp-for="Correo" class="form-control">
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control">
                        </div>

                        <button class="btn btn-primary">Iniciar Sesión</button>
                    </form>
                </div>
                <div class="col-lg-4">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRTIslLuI4ccL37uD5u3jKXSR3zVdXkEgm6DnfgyYvMIVrjXNiP&s">
                </div>
            </div>
        </div>
    </div>
</div>