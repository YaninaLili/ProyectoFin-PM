@model CrearCuentaViewModel

<div style="background-image: url(https://fatadigital.com/wp-content/uploads/2010/06/fondo_pantalla.jpg)">
    <div class="text-center">
        <h1>Crear cuenta de usuario</h1>
    </div>
    <div class="content">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-8">
                    <form method="post">
                        <div asp-validation-summary="All"></div>

                        <div class="form-group">
                            <label asp-for="Correo"></label>
                            <input asp-for="Correo" class="form-control">
                        </div>

                        <div class="form-group">
                            <label asp-for="Password1"></label>
                            <input asp-for="Password1" class="form-control">
                        </div>

                        <div class="form-group">
                            <label asp-for="Password2"></label>
                            <input asp-for="Password2" class="form-control">
                        </div>
                        
                        <button class="btn btn-primary">Registrar</button>
                    </form>
                </div>
                <div class="col-lg-4">
                    <div class="align-items-center mt-5 ml-5">
                        <img width="200px" src="https://cdn0.iconfinder.com/data/icons/ikooni-outline-free-basic/128/free-17-256.png">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>