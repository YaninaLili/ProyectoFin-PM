@model List<Producto>

<h1>Lista de Productos</h1>

@if (Model.Count == 0) {
    <p>No hay productos registrados.</p>
}

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
            <div class="card-body">
                <img src="@item.Foto">
                <ul class="list">
                    <li>@item.Nombre</li>
                    <li>@item.Marca</li>
                    <li>@item.Medida</li>
                    <li>@item.Precio</li>
                    <li>@item.Descripcion</li>
                </ul>
            </div>
            </div>
        </div>
    </div>
}