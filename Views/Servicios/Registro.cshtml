@model Servicio

<div class="col-lg-10" >
    <div class="text-center">
        <h1>Registro de Servicios</h1>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Foto"></label>
            <input asp-for="Foto" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Tipo"></label>
            <select asp-for="Tipo" class="form-control">
                <option value="Seleccionar">Seleccionar</option>
                <option value="Colonoterapia">Colonoterapia</option>
                <option value="Masajes">Masajes</option>
                <option value="Aplicacion">Aplicaci√≥n de vitaminas</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Tiempo"></label>
            <input asp-for="Tiempo" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" class="form-control">
        </div>
        
        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <textarea asp-for="Descripcion" rows="5" class="form-control"></textarea>
        </div>

        <button class="btn btn-warning">Registrar</button>
    </form>
</div>