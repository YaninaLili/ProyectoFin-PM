@model List<Servicio>

<h1>Lista de Servicios</h1>

@if (Model.Count == 0) 
{
    <p>No hay servicios registrados.</p>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <img src="@item.Foto">
        </div>
        <div class="col-sm-6">
                <h3>@item.Nombre</h3>
                <p>Tiempo: @item.Tiempo</p>
                <p>Precio: @item.Precio</p>
                <p>Descripci√≥n: @item.Descripcion</p>
        </div>
    }
</div>